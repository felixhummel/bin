#!/bin/bash
# shellcheck disable=SC2086
set -euo pipefail

my_name=$(basename $0)

assert_tool() {
  local tool=$1
  hash $tool &>/dev/null || notify-send --icon=dialog-error "$my_name" "ERROR\nCould not find $tool.\nTry 'apt install $tool'."
}

assert_tool maim
assert_tool xclip
maim --select | xclip -selection clipboard -target image/png
